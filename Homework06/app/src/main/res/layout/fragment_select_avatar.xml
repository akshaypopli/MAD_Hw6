<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".SelectAvatar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/ivAvtar1"
            android:layout_width="206dp"
            android:layout_height="171dp"
            android:src="@drawable/avatar_f_1"
            app:layout_constraintEnd_toStartOf="@+id/ivAvtar4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivAvtar2"
            android:layout_width="206dp"
            android:layout_height="171dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/avatar_f_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivAvtar1" />

        <ImageView
            android:id="@+id/ivAvtar3"
            android:layout_width="206dp"
            android:layout_height="171dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/avatar_f_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivAvtar2"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/ivAvtar4"
            android:layout_width="206dp"
            android:layout_height="171dp"
            android:src="@drawable/avatar_m_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivAvtar5"
            android:layout_width="206dp"
            android:layout_height="171dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/avatar_m_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ivAvtar2"
            app:layout_constraintTop_toBottomOf="@+id/ivAvtar4" />

        <ImageView
            android:id="@+id/ivAvtar6"
            android:layout_width="206dp"
            android:layout_height="171dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/avatar_m_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toEndOf="@+id/ivAvtar3"
            app:layout_constraintTop_toBottomOf="@+id/ivAvtar5"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>